modules = ["python-3.11"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "webserver"

[[workflows.workflow]]
name = "webserver"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[nix]

# Add these lines to your .replit file
[env]
NODE_OPTIONS = "--dns-result-order=ipv4first"

[packages]
nodejs = "18"

# Add this if not present
[deployment]
run = ["sh", "-c", "python3 -m http.server 3000"]
